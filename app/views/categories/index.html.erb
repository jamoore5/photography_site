<h1> Categories </h1>

<table>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to 'Show', category_path(category) %></td>
      <td><%= link_to 'Edit', edit_category_path(category) %></td>
      <td><%= link_to 'Delete', category_path(category),
              method: :delete,
              data: {confirm: 'Ary you sure'} %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Category', new_category_path %>