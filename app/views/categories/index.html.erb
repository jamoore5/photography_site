<%= link_to 'New Category', new_category_path %>

<h1> Categories </h1>

<table>
  <tr>
    <th>Name</th>
    <th colspan="2"></th>
    <th colspan="3"></th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td>
        <% unless category.public %>
            .
        <% end %>
        <%= category.name %>
      </td>
      <td><% if category.order_idx != Category.min_order_idx %><%= link_to 'Move Up', category_move_up_path(category), :method => :patch %><% end %></td>
      <td><% if category.order_idx != Category.max_order_idx %><%= link_to 'Move Down', category_move_down_path(category), :method => :patch %><% end %></td>
      <td><%= link_to 'Show', category_path(category) %></td>
      <td><%= link_to 'Edit', edit_category_path(category) %></td>
      <td><%= link_to 'Delete', category_path(category),
              method: :delete,
              data: {confirm: 'Ary you sure'} %></td>
    </tr>
  <% end %>
</table>