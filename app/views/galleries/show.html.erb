<%= link_to 'Add Photo', new_category_gallery_photo_path(@gallery.category, @gallery)  %>
<%= link_to 'Back to ' + @gallery.category.name, category_path(@gallery.category) %>

<div id='gallery'>
  <p>
    <strong> Name:</strong>
    <%= @gallery.name %>
  </p>

  <% @gallery.photos.each do |photo| %>
      <div id="caption">
        <% unless photo.public %>
            .
        <% end %>
        <%= photo.caption %>
        <%= link_to 'Edit', edit_category_gallery_photo_path(@category, @gallery, photo) %>
        <%= link_to 'Delete', category_gallery_photo_path(@category, @gallery, photo),
                    method: :delete,
                    data: {confirm: 'Ary you sure'} %>
      </div>
      <%= image_tag photo.image.url(:medium) %>
  <% end %>
</div>