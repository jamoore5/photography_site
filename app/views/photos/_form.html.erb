<%= form_for([@category, @gallery, @photo]) do |f| %>
    <% if @photo.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@photo.errors.count, 'error') %> prohibited this category from being saved:
          </h2>
          <ul>
            <% @photo.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.file_field :image %>
    </p>

    <p>
      <%= f.label :caption %><br>
      <%= f.text_field :caption %>
    </p>

    <p>
      <%= f.label :public %><br>
      <%= f.check_box :public %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>